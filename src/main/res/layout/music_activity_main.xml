<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".music_MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/yut_ConstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323232"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/TopBar004"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#292929"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/game006_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nexonfootballgothic_b"
                android:gravity="center"
                android:text="@string/game4_title"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#7C4DFF"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/UnderBar004"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TopBar004">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/yut_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/entitybackgroundgame"
                android:visibility="gone"
                tools:visibility="gone">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/UnderBar004"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#292929"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_66_backToMenu_ran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:fontFamily="@font/nexonfootballgothic_b"
                android:text="@string/goBack"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nexonfootballgothic_b"
                android:text="NEXT"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonPlay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nexonfootballgothic_b"
                android:text="PLAY"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonNext" />

            <Button
                android:id="@+id/buttonIntro"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nexonfootballgothic_b"
                android:text="INTRO"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonPlay" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageViewCDframe"
            android:layout_width="250dp"
            android:layout_height="192dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/entitybackgroundgamedark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewCD"
                android:layout_width="239dp"
                android:layout_height="192dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageViewSongframe"
        android:layout_width="302dp"
        android:layout_height="159dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/entitybackgroundgamedark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/yut_ConstLayout"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="282dp"
        android:layout_height="139dp"
        android:scrollbars="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/nexonfootballgothic_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/yut_ConstLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/whatisthissongname"
        android:textColor="@color/white"
        android:textSize="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/yut_ConstLayout"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <Button
            android:id="@+id/buttonTA"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:backgroundTint="#444444"
            android:autoSizeTextType="uniform"
            android:text="TEAM A" />

        <Button
            android:id="@+id/buttonTB"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:autoSizeTextType="uniform"
            android:layout_marginStart="5dp"
            android:backgroundTint="#444444"
            android:text="TEAM B" />

        <Button
            android:id="@+id/buttonTC"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#444444"
            android:text="TEAM C" />

        <Button
            android:id="@+id/buttonTD"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:autoSizeTextType="uniform"
            android:backgroundTint="#444444"
            android:text="TEAM D" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>